  "cluster": "Relational & Sociality",
  "description": "Detects relational and emotional state through multimodal physical pattern recognition — not mind reading, but embodied attunement. Integrates gaze, tone, breath, and posture signals to evaluate coherence, openness, and tension fields.",
  "inputs": {
    "visual": {
      "features": ["eye_focus_vector", "blink_rate", "microexpression_symmetry", "head_tilt_angle", "shoulder_alignment"],
      "sampling_rate_hz": 60
    },
    "auditory": {
      "features": ["pitch_contour", "formant_shift", "speech_tempo", "pause_density", "breath_noise_ratio"],
      "sampling_rate_hz": 16000
    },
    "respiratory": {
      "features": ["breath_depth", "inhalation_exhalation_ratio", "breath_rhythm_variability"],
      "sampling_rate_hz": 5
    },
    "thermal": {
      "features": ["facial_temp_map", "hand_temp_delta"],
      "sampling_rate_hz": 1
    }
  },
  "fusion_logic": {
    "method": "Bayesian fusion with Kalman filter smoothing",
    "weighting": {
      "visual": 0.4,
      "auditory": 0.3,
      "respiratory": 0.2,
      "thermal": 0.1
    },
    "outputs": [
      "attunement_vector_3D",
      "confidence_score",
      "valence_arousal_map"
    ]
  },
  "interpretation": {
    "states_detected": [
      "calm_presence",
      "focused_attention",
      "guardedness",
      "relational_openness",
      "stress_tension",
      "avoidance"
